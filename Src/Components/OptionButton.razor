@namespace QuizEdu.Src.Components

<MudButton Variant="Variant.Filled" Color="@Color" FullWidth Class="pa-12" Style="font-size: 2.5rem;"
    OnClick="@OnClick">
    @Text
</MudButton>

@code {
    [Parameter] public string Text { get; set; }

    [Parameter] public Color Color { get; set; } = Color.Primary;

    [Parameter] public EventCallback OnClick { get; set; }
}